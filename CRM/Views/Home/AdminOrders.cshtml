@model List<SubmitOrderModel>

<!DOCTYPE html>
<html>
<head>
    <title>Admin Orders</title>
    <!-- Include DataTables CSS and JS files -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        th {
            background-color: rgb(27, 40, 80) !important;
            color: white !important;
        }
    </style>
</head>
<body>
   
    <section class="pcoded-main-container">
        <div class="pcoded-content">
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="card">
                <main id="main" >
                        <div class="container mt-4" style="border: 2px solid;border-radius: 18px;color: #1b2850;">
                            <h3 style="width: 144px;text-align: center;border-radius: 14px;color: #f2f0f4;background-color: #1b2850;margin-top: -18px;margin-left: 16px;">Orders</h3>
                      <br />
                    <div class="table-responsive">
                    <table id="adminOrdersTable" class="table table-bordered table-hover dt-responsive">
                        <thead>
                            <tr>
                                <th>Client Order Id</th>
                               @*  <th>User Id</th> *@
                                <th>Service</th>
                                <th>Vendor Name</th>
                                <th>Vendor Order Id</th>
                                <th>Quantity</th>
                          @*       <th>Expected Time</th> *@
                                <th>Previous Quantity</th>
                               @*  <th>Message</th> *@
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.clientOrderId</td>
                                  @*   <td>@order.UserId</td> *@
                                    <td>@order.Service</td>
                                    <td>@order.VendorName</td>
                                    <td>@order.VendorOrderId</td>
                                    <td>@order.Quantity</td>
                                 @*    <td>@order.ExpectedTime</td> *@
                                    <td>@order.PreviousQuantity</td>
                                   @*  <td>@order.Message</td> *@
                                    <td>
                                                <button class="btn btn-primary btn-complete-order" data-toggle="modal" data-target="#completeOrderModal-@order.Id" data-order-id="@order.Id" style="background-color: #43ce81 !important;border-color: #28c76f !important;">
                                                    <i class="fas fa-check-circle"></i> Submit
                                                </button>
                                        <div class="modal fade" id="completeOrderModal-@order.Id" tabindex="-1" role="dialog" aria-labelledby="completeOrderModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="completeOrderModalLabel">Complete Order</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <label for="completionMessage">Completion Message:</label>
                                                        <textarea class="form-control" id="completionMessage-@order.Id"></textarea>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button class="btn btn-primary btn-submit-order" data-order-id="@order.Id">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                    </div>
                </main>
                </div>
            </div>
        </div>
    </div>
    </div>
    </section>

    <script>
        $(document).ready(function () {
            // Initialize DataTables
            $('#adminOrdersTable').DataTable();

            // Attach click event to modal trigger buttons
            $('.btn-complete-order').click(function () {
                var orderId = $(this).data('order-id');
                $('#completionMessage-' + orderId).val(''); // Clear previous input
                $('#completeOrderModal-' + orderId).modal('show');
            });

            // Attach click event to submit button in modal
            $('.btn-submit-order').click(function () {
                var orderId = $(this).data('order-id');
                completeOrder(orderId);
            });

            function completeOrder(orderId) {
                var completionMessage = $("#completionMessage-" + orderId).val();

                $.ajax({
                    url: '/Home/CompleteOrder',
                    type: 'POST',
                    data: { orderId: orderId, completionMessage: completionMessage },
                    success: function (data) {
                        if (data.success) {
                            alert("Order completed successfully!");
                            $('#completeOrderModal-' + orderId).modal('hide');
                        } else {
                            window.location.href = window.location.href;
                        }
                    },
                    error: function () {
                        window.location.href = window.location.href;
                    }
                });
            }
        });
    </script>
</body>
</html>
