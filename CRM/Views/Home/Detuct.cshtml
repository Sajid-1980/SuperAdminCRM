<style>
    th {
        background-color: rgb(27, 40, 80) !important;
        color: white !important;
    }
</style>
@model List<SuperAdmin.Models.DetuctionType>
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <main id="main">
                <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Detuction Type ID</th>
                            <th>Detuction</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DetuctionTypeId</td>
                                <td>@item.Detuction</td>
                                <td>
                                    <button class="btn btn-primary" onclick="openEditModal(@item.DetuctionTypeId)">Edit</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- Edit Modal -->
                <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel">Edit Detuction Type</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("UpdateDetuctionType", "Home", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label for="detuctionTypeId">Detuction Type ID:</label>
                                        <input type="text" class="form-control" id="detuctionTypeId" name="id" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="detuction">Detuction:</label>
                                        <input type="text" class="form-control" id="detuction" name="detuction">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


                @section Scripts {
                    <script>
                        function openEditModal(detuctionTypeId) {
                            // Fetch data for the specified Detuction Type ID and populate the modal form
                            $.ajax({
                                url: '/Home/GetDetuctionType/' + detuctionTypeId,
                                type: 'GET',
                                success: function (data) {
                                    $('#detuctionTypeId').val(data.detuctionTypeId);
                                    $('#detuction').val(data.detuction);
                                    $('#editModal').modal('show');
                                },
                                error: function () {
                                    alert('Error retrieving Detuction Type details.');
                                }
                            });
                        }


                    </script>
                }
            </main>
        </div>
    </div>
</div>
